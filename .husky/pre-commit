# Run checks but don't fail the commit - warn only
echo "🔍 Running ESLint check..."
npm run lint -- --max-warnings 100 || echo "⚠️  ESLint warnings found (continuing anyway)"

echo "🔍 Running TypeScript check..." 
npm run type-check || echo "⚠️  TypeScript errors found (continuing anyway)"

echo "✅ Pre-commit checks completed (commit allowed)"
